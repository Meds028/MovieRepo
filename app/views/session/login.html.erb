<head>
    <title>Register</title>
</head>

<% if current_user.present? %>
    <%= render partial: "shared/header_user" %>
<% else %>
    <%= render partial: "shared/header" %>
<% end %>

<div id="main-container">
    <main id="register-container">
        <form action='<%= session_create_path %>' method='post'>
            <% if flash[:alert].present? %>
                <div class="alert alert-danger errors">
                    <p><%= flash[:alert] %></p>
                </div>
            <% end %>

            <div class="mb-3 row">
                <label for="inputEmail" class="col-sm-3 col-form-label">Email Address</label>
                <div class="col-sm-9 regiter-input-container">
                    <input type="text" class="user-form" id="inputEmail" name="user[email]">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-9 regiter-input-container">
                    <input type="password" class="user-form" id="inputPassword" name="user[password]">
                </div>
            </div>
            <div class="d-grid gap-2 login">
                <input class="btn btn-primary" type="submit" value="Login">
            </div>
            <a href="<%= register_path %>"><p>Create new Account</p></a>
        </form>
    </main>
</div>

<%= render partial: "shared/footer" %>



